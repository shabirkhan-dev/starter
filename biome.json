{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"apps/**/*.ts",
			"apps/**/*.tsx",
			"packages/**/*.ts",
			"packages/**/*.tsx",
			"*.config.ts",
			"*.config.mjs",
			"!**/.next/**",
			"!**/dist/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
